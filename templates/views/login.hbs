<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <style>
       *{
        margin:0;
        padding: 0;
        box-sizing: border-box;
      }
      nav {
  background-color: #333;
  color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 1rem;
}

nav ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}

nav li {
  margin-left: 1rem;
}

nav a {
  color: #fff;
  text-decoration: none;
  padding: 0.5rem;
  border-radius: 5px;
  transition: background-color 0.3s ease-in-out;
}

nav a:hover {
  background-color: #555;
}

nav a:active {
  background-color: #777;
}

nav .active {
  background-color: #555;}
      form { display: flex; flex-direction: column; justify-content: center;
      align-items: center; height: 100vh; } input[type="email"],
      input[type="password"] { padding: 10px; margin: 10px; border-radius: 5px;
      border: none; box-shadow: 0 0 5px gray; width: 100%; max-width: 400px; }
      button[type="submit"] { background-color: #008CBA; color: white; padding:
      10px; border: none; border-radius: 5px; cursor: pointer; }
      button[type="submit"]:hover { background-color: #005F6B; } h1 {
      margin-top: 0; font-size: 2rem; } .container { display: flex;
      justify-content: center; align-items: center; height: 100%; }
    </style>
  </head>
  <body>
        {{>navbar}}

    <div class="container">
      <form action="/login" method="POST">
        <h1>Login</h1>
        <input type="email" name="email" placeholder="Email" required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <button type="submit">Login</button>
      </form>
    </div>
  </body>
</html>